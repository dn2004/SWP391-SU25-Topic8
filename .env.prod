# .env.prod (Dành cho môi trường Docker Compose)
# Sử dụng tên biến môi trường ngắn gọn

# --- Profile ---
PROFILE=default

# --- Cấu hình Server ---
PORT=8081

# --- Cấu hình Kết nối Database (cho ứng dụng Spring Boot trong Docker) ---
DB_URL=jdbc:mysql://mysql:3306/swp?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC&createDatabaseIfNotExist=true
DB_USER=dev_swp
DB_PASS=12345


# --- Cấu hình cho Service MySQL (trong Docker) ---
MYSQL_DATABASE_NAME=swp
MYSQL_ROOT_PASSWORD_SECRET=12345
MYSQL_USER_APP=dev_swp
MYSQL_PASSWORD_APP=12345

# --- Cấu hình JWT ---
JWT_
JWT_EXP_MS=3600000
JWT_ISSUER=my-schoolhealth-app

# --- Cấu hình Spring Mail ---
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=datnhqe180140@fpt.edu.vn
MAIL_PASS="ksiuhuvomraakeso"


# --- Cấu hình Tài khoản Admin Mặc định của Ứng dụng ---
ADMIN_EMAIL=admin@schoolhealth.com
ADMIN_PASS=Admin@123
ADMIN_NAME="System Administrator (Dev)"

# --- Cấu hình Redis (cho ứng dụng Spring Boot trong Docker) ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASS=

# --- Các cấu hình tùy chỉnh của ứng dụng ---
OTP_EXPIRY=1 # Đổi từ OTP_EXPIRY_MINUTES
APP_FRONTEND_URL=http://localhost:5173
APP_LOGIN_PATH=/login

# --- Cấu hình Character Set cho Service MySQL (không phải của Spring Boot app) ---
MYSQL_CHARSET=utf8mb4
MYSQL_COLLATION=utf8mb4_unicode_ci
